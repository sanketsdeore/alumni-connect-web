generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())

  alumniProfile AlumniProfile?
}

model AlumniProfile {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  passingYear  Int
  company      String
  experience   Int
  location     String
  linkedin     String?

  user User @relation(fields: [userId], references: [id])
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  createdBy   Int
}

model Opening {
  id          Int      @id @default(autoincrement())
  title       String
  company     String
  description String
  postedBy    Int
}

model Story {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
}
