generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())

  alumniProfile      AlumniProfile?
  stories            Story[]
  eventRegistrations EventRegistration[]
}

model AlumniProfile {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  passingYear Int
  company     String
  experience  Int
  location    String
  linkedin    String?

  user User @relation(fields: [userId], references: [id])
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  time        String
  venue       String
  createdBy   Int
  createdAt   DateTime @default(now())
  alumniOnly  Boolean  @default(false)

  registrations EventRegistration[]
}

model EventRegistration {
  id      Int @id @default(autoincrement())
  userId  Int
  eventId Int

  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}

model Opening {
  id          Int     @id @default(autoincrement())
  title       String
  company     String
  description String
  location    String?
  link        String?
  postedBy    Int
}

model Story {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  authorId Int

  author User @relation(fields: [authorId], references: [id])
}

model DonationProject {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  targetAmount Float
  link         String? // âœ… NEW
  createdAt    DateTime @default(now())
  createdBy    Int
}
